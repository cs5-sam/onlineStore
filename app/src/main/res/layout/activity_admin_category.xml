<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slogan_category"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Add new product"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="26sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/slogan_category">
            <ImageView
                android:id="@+id/t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/tshirts"/>
            <ImageView
                android:id="@+id/sports_t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"/>
            <ImageView
                android:id="@+id/female_dresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female_dresses"/>
            <ImageView
                android:id="@+id/sweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sweather"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/linear1_category_layout">
            <ImageView
                android:id="@+id/glasses"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/glasses"/>
            <ImageView
                android:id="@+id/purse_bags"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/purses_bags"/>
            <ImageView
                android:id="@+id/hats_caps"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hats"/>

            <ImageView
                android:id="@+id/shoes"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/shoess" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/linear2_category_layout">
            <ImageView
                android:id="@+id/headphones_handfree"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/headphoness"/>
            <ImageView
                android:id="@+id/laptop_pc"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/laptops"/>
            <ImageView
                android:id="@+id/watches"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/watches"/>

            <ImageView
                android:id="@+id/mobilephones"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/mobiles" />

        </LinearLayout>

        <Button
            android:id="@+id/update_product_btn"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Update Product"
            android:textColor="#ffffff"
            android:layout_below="@+id/linear3_category_layout"
            android:textSize="20sp"
            android:layout_marginTop="80dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/check_orders_btn"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Check New Orders"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/update_product_btn"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Logout"
            android:textColor="#ffffff"
            android:layout_below="@+id/check_orders_btn"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"/>


    </RelativeLayout>
</ScrollView>