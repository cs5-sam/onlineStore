<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image_details"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_details"
            android:text="Product name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/product_name_details"/>
        <TextView
            android:id="@+id/product_name_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_details"
            android:text="Product Description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/product_name_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_description"
            android:text="Product price"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="60dp"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/number_btn"
            android:layout_centerHorizontal="true"
            app:textSize="10sp"
            app:initialNumber="1"
            app:backgroundDrawable="@drawable/send_sms_button"
            app:finalNumber="100"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_below="@+id/product_name_price">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        <Button
            android:id="@+id/add_to_cart_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/send_sms_button"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Add to cart"
            android:elevation="6dp"
            android:layout_below="@+id/number_btn"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </RelativeLayout>
</ScrollView>